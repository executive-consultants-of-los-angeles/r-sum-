#!/bin/bash

echo "set PGHOST"
export PGHOST=pg.gc
echo "set PGUSER"
export PGUSER=postgres
echo $RSUM_ENV

echo "createuser"
createuser -e -s $RSUM_ENV
echo "createdb"
createdb -e $RSUM_ENV

echo "flush db"
python rsum/manage.py flush --no-input;
python rsum/manage.py makemigrations home;
python rsum/manage.py migrate; 
python rsum/manage.py flush --no-input;
python rsum/rsum/create.py;
exec gunicorn -b '0.0.0.0:8000' -p /var/run/rsum.pid rsum.wsgi 
